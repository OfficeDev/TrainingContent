@model Files.Models.FileViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin-top:50px;">
    <div class="col-sm-12">
        @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" id="file" name="file" class="btn btn-default" />
            <input type="submit" id="submit" name="submit" value="Upload" class="btn btn-default" />
        }
    </div>
</div>
<div class="row" style="margin-top:50px;">
    <div class="col-sm-12">
        <div class="table-responsive">
            <table id="filesTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Created</th>
                        <th>Modified</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in @Model.MyFiles)
                    {
                        <tr>
                            <td>
                                @{
                        Dictionary<string, object> attributes1 = new Dictionary<string, object>();
                        attributes1.Add("class", "btn btn-warning");

                        RouteValueDictionary routeValues1 = new RouteValueDictionary();
                        routeValues1.Add("name", file.Id);
                        @Html.ActionLink("X", "Delete", "Home", routeValues1, attributes1);
                                }
                            </td>
                            <td>
                                <span class="fileNameSpan">@file.Id</span>
                                @using (Html.BeginForm("Rename", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <input type="hidden" id="oldTitle" name="oldTitle" value="@file.Id" />
                                    <input type="text" id="newTitle" name="newTitle" class="hide" value="@file.Id" />
                                    <input type="submit" value="Rename" class="hide btn btn-default" />
                                }
                            </td>
                            <td>
                                <a href="@file.Url">@file.Name</a>
                            </td>
                            <td>
                                @file.TimeCreated
                            </td>
                            <td>
                                @file.TimeLastModified
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="btn btn-group-sm">
            @{
                Dictionary<string, object> attributes2 = new Dictionary<string, object>();
                attributes2.Add("class", "btn btn-default");

                RouteValueDictionary routeValues2 = new RouteValueDictionary();
                routeValues2.Add("pageIndex", (Model.PageIndex == 0 ? 0 : Model.PageIndex - 1).ToString());
                routeValues2.Add("pageSize", Model.PageSize.ToString());
                @Html.ActionLink("Prev", "Index", "Home", routeValues2, attributes2);

                RouteValueDictionary routeValues3 = new RouteValueDictionary();
                routeValues3.Add("pageIndex", (Model.PageIndex + 1).ToString());
                routeValues3.Add("pageSize", Model.PageSize.ToString());
                @Html.ActionLink("Next", "Index", "Home", routeValues3, attributes2);

            }
        </div>
    </div>
</div>

@section scripts {
    <script>


        (function () {
            "use strict";

            $(function () {

                $(".fileNameSpan").click(function () {
                    $(this).next().children("input").removeClass("hide");
                    $(this).addClass("hide");
                });

            });

        }());

    </script>
}
