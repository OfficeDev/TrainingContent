<Page
    x:Name="pageRoot"
    x:Class="Office365StarterProject.Views.Contacts"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Office365Starter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:Office365StarterProject.Common"
    mc:Ignorable="d">

    <Page.Resources>
        <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines four rows:
        * Row 0 contains the back button and page title
        * Row 1 contains a progress bar and the sample summary
        * Row 2 contains the core input and output for the calendar operations
        * Row 3 provides status information on select operations
    -->

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Name="aGrid" >
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.Row="0" Background="{StaticResource SampleHeaderBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="74"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Grid.Column="0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button" Height="41" Width="41" RenderTransformOrigin="0.514,-0.508"/>
            <Grid Grid.Column="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="1" Text="Office 365 Contacts API" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Style="{StaticResource HeaderTextBlockStyle}"
                       />
                <Image Grid.Column="2" Source="../Assets/ContactsIcon.png" Height="100" Margin="60,0,0,0"/>
            </Grid>
        </Grid>

        <!-- Progress bar and the sample summary -->
        <ProgressBar Name="LoadContactsProgress"  Width="900" DataContext="{Binding ContactsViewModel}"
                     Visibility="{Binding Path=LoadingContacts, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Grid.Row="1" VerticalAlignment="Top" Margin="0,10,0,1"  IsIndeterminate="True"/>

        <TextBlock Grid.Row="1"        
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                    
                   Style="{StaticResource BaseTextBlockStyle}" Margin="10" TextAlignment="Center"
                   >
                To get started, select the <Bold>Get contacts</Bold> button. This will get a list of the first page of contacts.<LineBreak/>
                Learn more about the REST API calls made in this application by reading 
                <Bold><Hyperlink NavigateUri="http://msdn.microsoft.com/office/office365/api/contacts-rest-operations" Foreground="{StaticResource HyperLinkBrush}"  >Contacts REST operations</Hyperlink></Bold>.

        </TextBlock>

        <!--Core input and output for the contact operations-->
        <Grid Grid.Row="2" DataContext="{Binding ContactsViewModel}" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Grid.Row="1">
                <TextBlock  HorizontalAlignment="Left"  Text="Actions" VerticalAlignment="Top" Style="{ThemeResource SubheaderTextBlockStyle}" Margin="0,0,0,20" />
                <Button 
                Content="Get contacts" 
                Margin="-1,5,0,0" 
                Command="{Binding Path=GetContactsCommand}" 
                CommandParameter="Read" Width="185"/>
                <Button 
                Content="Create contact " 
                Margin="0,5,0,0" 
                Width="185"
                Command="{Binding Path=NewContactCommand}"/>
                <Button 
                Content="Update contact" Margin="0,5,0,0" 
                Width="185"
                    Command="{Binding Path=SelectedItem.SaveChangesCommand,ElementName=ContactList}"/>
                <Button 
                    Content="Delete contact" 
                    Margin="0,5,0,0" 
                    Width="185"
                    Command="{Binding Path=DeleteContactCommand}"
                />

            </StackPanel>
            <StackPanel Grid.Column="3" Grid.Row="1" >
                <TextBlock  HorizontalAlignment="Left"  Text="Contacts" VerticalAlignment="Top" Style="{ThemeResource SubheaderTextBlockStyle}" Margin="10,0,0,20" />
                <ListBox 
                Name="ContactList" 
                ItemsSource="{Binding Path=Contacts}" 
                Margin="10,10,0,10" 
                Width="500" 
                HorizontalAlignment="Left" 
                Height="445"
                ScrollViewer.VerticalScrollMode="Enabled"

                SelectedItem="{Binding Path=SelectedContact, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=DisplayString}" Style="{StaticResource BodyTextBlockStyle}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            <StackPanel Grid.Column="5" Grid.Row="1" Margin="0,0,-18,0" Name="EventEntryPanel">
                    <TextBlock  HorizontalAlignment="Left"  Text="Contact details" VerticalAlignment="Top" Style="{ThemeResource SubheaderTextBlockStyle}" Margin="10,0,0,20" />
                    <TextBox 
                        PlaceholderText="File As" 
                        HorizontalAlignment="Left" 
                        Header="File As"
                        Name="FileAs" 
                        Text="{Binding Path=SelectedItem.ContactFileAs, ElementName=ContactList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                        Width="300" 
                        Margin="10,1,1,10"
                        />
                    <StackPanel Orientation="Horizontal">
                        <TextBox
                        PlaceholderText="First Name" 
                        HorizontalAlignment="Left" 
                        Header="First"
                        Name="FirstName" 
                        Text="{Binding Path=SelectedItem.ContactFirstName, ElementName=ContactList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Width="146" Margin="10,10,1,10"
                        />
                        <TextBox
                        PlaceholderText="Last Name" 
                            Header="Last"
                        HorizontalAlignment="Left" 
                        Name="LastName" 
                        Text="{Binding Path=SelectedItem.ContactLastName, ElementName=ContactList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Width="146" Margin="10,10,1,10"
                        />
                    </StackPanel>
                    <TextBox 
                        PlaceholderText="Job Title" 
                        HorizontalAlignment="Left" 
                        Header="Job title"
                        Name="JobTitle" 
                        Text="{Binding Path=SelectedItem.ContactJobTitle, ElementName=ContactList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                        Width="300" 
                        Margin="10,1,1,10"
                        />
                    <TextBox 
                        PlaceholderText="Email Address" 
                        Header="Email"
                        HorizontalAlignment="Left" 
                        Name="Email" 
                        Text="{Binding Path=SelectedItem.ContactEmail, ElementName=ContactList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Width="300" 
                        Margin="10,1,1,10"
                        />
                    <TextBox 
                        PlaceholderText="Work Phone Number" 
                        Header="Work"
                        HorizontalAlignment="Left" 
                        Name="WorkPhone" 
                        Text="{Binding Path=SelectedItem.ContactWorkPhone, ElementName=ContactList,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Width="300" 
                        Margin="10,1,1,10"
                        />
                    <TextBox 
                        PlaceholderText="Mobile Phone Number" 
                        Header="Mobile"
                        HorizontalAlignment="Left" 
                        Name="MobilePhone" 
                        Text="{Binding Path=SelectedItem.ContactMobilePhone, ElementName=ContactList,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Width="300" 
                        Margin="10,1,1,10"
                        />
                    <Button 
                            HorizontalAlignment="Center"
                            Content="Undo" 
                            Width="148" 
                            Margin="10,5,0,0" 
                            Command="{Binding Path=CancelContactChangesCommand}" 
                        />
                </StackPanel>
        </Grid>
        <!-- Status text -->
        <TextBlock Name="OperationResult" DataContext="{Binding Path=LoggingViewModel}"
                     Text="{Binding Path=Information}"
                     VerticalAlignment="Top" Margin="0,10,0,0" Style="{ThemeResource SubheaderTextBlockStyle}" Grid.Row="3" HorizontalAlignment="Center" FontSize="20">
        </TextBlock>
    </Grid>
</Page>
