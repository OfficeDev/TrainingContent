    <Page
    x:Name="pageRoot"
    x:Class="Office365StarterProject.Views.Calendar"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Office365Starter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:Office365StarterProject.Common"
    mc:Ignorable="d">

    <Page.Resources>
        <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines four rows:
        * Row 0 contains the back button and page title
        * Row 1 contains a progress bar and the sample summary
        * Row 2 contains the core input and output for the calendar operations
        * Row 3 provides status information on select operations
    -->

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Name="aGrid" >
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.Row="0" Background="{StaticResource SampleHeaderBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="74"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Grid.Column="0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button" Height="41" Width="41" RenderTransformOrigin="0.514,-0.508"/>
            <Grid Grid.Column="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="1" Text="Office 365 Calendar API" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Style="{StaticResource HeaderTextBlockStyle}"
                       />
                <Image Grid.Column="2" Source="../Assets/CalendarIcon.png" Height="100" Margin="60,0,0,0"/>
            </Grid>
        </Grid>

        <!-- Progress bar and the sample summary -->
        <ProgressBar Name="LoadCalendarProgress"  Width="900" DataContext="{Binding CalendarViewModel}"
                     Visibility="{Binding Path=LoadingCalendarEvents, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Grid.Row="1" VerticalAlignment="Top" Margin="0,10,0,1"  IsIndeterminate="True"/>
        
        <TextBlock Grid.Row="1"        
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                    
                   Style="{StaticResource BaseTextBlockStyle}" Margin="10"
                   >
                To get started, select the <Bold>Get calendar events</Bold> button. This will get a list of events that occur between 6 hours before and after the<LineBreak/>
                current time. Learn more about the REST API calls made in this application by reading 
                <Bold><Hyperlink NavigateUri="http://msdn.microsoft.com/en-us/library/office/dn792114(v=office.15).aspx" Foreground="{StaticResource HyperLinkBrush}"  >Calendar REST API in Office 365 APIs</Hyperlink></Bold>.

        </TextBlock>

        <!--Core input and output for the calendar operations-->
        <Grid Grid.Row="2" DataContext="{Binding CalendarViewModel}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                <TextBlock  HorizontalAlignment="Left"  Text="Actions" VerticalAlignment="Top" Style="{ThemeResource SubheaderTextBlockStyle}" Margin="0,0,0,20" />
                <Button 
                Content="Get calendar events" 
                Margin="-1,5,0,0" 
                Command="{Binding Path=GetCalendarEventsCommand}" 
                CommandParameter="Read" Width="185"/>
                <Button 
                Content="Create event " 
                Margin="0,5,0,0" 
                Width="185"
                Command="{Binding Path=NewEventCommand}"/>
                <Button 
                Content="Update event" Margin="0,5,0,0" 
                Width="185"
                    Command="{Binding Path=SelectedItem.SaveChangesCommand,ElementName=TodaysCalendar}"/>
                <Button 
                    Content="Delete event" 
                    Margin="0,5,0,0" 
                    Width="185"
                    Command="{Binding Path=DeleteEventCommand}"
                />

            </StackPanel>
            <Grid Grid.Column="3" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="820"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" >
                    <TextBlock  HorizontalAlignment="Left"  Text="Today's calendar" VerticalAlignment="Top" Style="{ThemeResource SubheaderTextBlockStyle}" Margin="0,0,0,20" />
                    <ListBox 
                    Name="TodaysCalendar" 
                    ItemsSource="{Binding Path=TodaysEvents}" 
                    Margin="10,10,1,10" 
                    Width="800" 
                    HorizontalAlignment="Left" 
                    Height="445"
                    ScrollViewer.VerticalScrollMode="Enabled"

                    SelectedItem="{Binding Path=SelectedEvent, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=DisplayString}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,-18,0" Name="EventEntryPanel">
                    <TextBlock  HorizontalAlignment="Left"  Text="Event details" VerticalAlignment="Top" Style="{ThemeResource SubheaderTextBlockStyle}" Margin="0,0,0,20" />
                    <TextBox
                        PlaceholderText="Subject" 
                        HorizontalAlignment="Left" 
                        Name="EventName" 
                        Text="{Binding Path=SelectedItem.Subject, ElementName=TodaysCalendar, Mode=TwoWay}" 
                        Width="300" Margin="10,10,1,10"
                        />
                    <TextBox 
                        PlaceholderText="Location" 
                        HorizontalAlignment="Left" 
                        Name="Location" 
                        Text="{Binding Path=SelectedItem.LocationName, ElementName=TodaysCalendar, Mode=TwoWay}"  
                        Width="300" 
                        Margin="10,1,1,10"
                        />
                    <TextBox 
                        PlaceholderText="Attendees" 
                        HorizontalAlignment="Left" 
                        Name="Attendees" 
                        Text="{Binding Path=SelectedItem.Attendees, ElementName=TodaysCalendar,Mode=TwoWay}" 
                        Width="300" 
                        Margin="10,1,1,10"
                        />
                    <DatePicker 
                        Name="startDatePicker" 
                        Header="Start date"
                        DayFormat="{}{day.integer} {dayofweek.abbreviated}" 
                        MonthFormat="{}{month.abbreviated(3)}" 
                        YearFormat="{}{year.abbreviated(4)}" 
                        Margin="10,1,0,10" 
                        Width="298" Date="{Binding Path=SelectedItem.Start, ElementName=TodaysCalendar, Mode=TwoWay}" 
                        YearVisible="True"
                    />
                    <TimePicker
                    Name="startTimePicker"
                    Header="Start time"
                    ClockIdentifier="12HourClock"
                    Margin="10,5,0,10"
                    Time="{Binding Path=SelectedItem.StartTime, ElementName=TodaysCalendar, Mode=TwoWay}"/>
                    <DatePicker 
                    Name="endDatePicker" 
                    Header="End date"
                    DayFormat="{}{day.integer} {dayofweek.abbreviated}" 
                    MonthFormat="{}{month.abbreviated(3)}" 
                    YearFormat="{}{year.abbreviated(4)}" 
                    Margin="10,1,0,10" 
                    Width="298" Date="{Binding Path=SelectedItem.End,ElementName=TodaysCalendar, Mode=TwoWay}" 
                    YearVisible="True"
                    />
                    <TimePicker
                    Name="endTimePicker"
                    Header="End time"
                    ClockIdentifier="12HourClock"
                    Margin="10,5,0,10"
                    Time="{Binding Path=SelectedItem.EndTime, ElementName=TodaysCalendar, Mode=TwoWay}"/>
                    <TextBox 
                        PlaceholderText="Body content" 
                        HorizontalAlignment="Left" 
                        Name="BodyContent" 
                        Text="{Binding Path=SelectedItem.BodyContent,ElementName=TodaysCalendar, Mode=TwoWay}" 
                        Width="298" 
                        Margin="10,1,0,10"
                        />
                    <Button 
                            HorizontalAlignment="Center"
                            Content="Undo" 
                            Width="148" 
                            Margin="10,5,0,0" 
                            Command="{Binding Path=CancelEventChangesCommand}" 
                        />
                </StackPanel>
            </Grid>
        </Grid>
        <!-- Status text -->
        <TextBlock Name="OperationResult" DataContext="{Binding Path=LoggingViewModel}"
                     Text="{Binding Path=Information}"
                     VerticalAlignment="Top" Margin="10,10,10,0" Style="{ThemeResource SubheaderTextBlockStyle}" Grid.Row="3" HorizontalAlignment="Center">
        </TextBlock>
        


    </Grid>
</Page>
