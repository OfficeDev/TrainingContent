    <common:SettingsFlyout
    x:Class="OneNoteCloudCreatePagesSample.PrivacyFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:OneNoteCloudCreatePagesSample.Common"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    HeaderText="Privacy">
   <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel>
            <TextBlock Style="{StaticResource SubheaderTextStyle}" Text="Privacy statement" />
            <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0,0,0,25" TextWrapping="Wrap">
                <TextBlock.Text>
                    Your privacy statement here. You need to define a privacy statement to use Windows Live authentication.
                </TextBlock.Text>
            </TextBlock>
        </StackPanel>
    </StackPanel>
</common:SettingsFlyout>
